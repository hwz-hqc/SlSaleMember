<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.slsale.member.mapper.AuAuthorityMapper">

    <insert id="addAuthority" parameterType="AuAuthority">
        insert into au_authority (roleId,functionId,userTypeId,creationTime,createdBy) values(
        #{roleId},
        #{functionId},
        #{userTypeId},
        #{creationTime},
        #{createdBy}
        )
    </insert>

    <update id="modifyAuthority" parameterType="AuAuthority">
        update au_authority set
        roleId = #{roleId},
        functionId = #{functionId},
        creationTime = #{creationTime},
        createdBy = #{createdBy},
        userTypeId = #{userTypeId}
        where id = #{id}
    </update>

    <delete id="deleteAuthority" parameterType="AuAuthority">
        delete from au_authority
        <trim prefix="where" prefixOverrides="and | or">
            <if test=" id != null">
                and id = #{id}
            </if>
            <if test = "roleId != null ">
                and roleId = #{roleId}
            </if>
        </trim>
    </delete>

    <!-- getAuthority -->
    <select id="getAuthority" resultType="AuAuthority" parameterType="AuAuthority">
        select * from au_authority where roleId=#{roleId} and functionId=#{functionId}
    </select>

</mapper>
